@model OnlineFridge.Data.PagedList<OnlineFridge.Models.Recipe>

@{
    ViewData["Title"] = "Recipe Book";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<h1>Recipe Book</h1>
<p>
    <a class="btn btn-success" asp-action="Create"><i class="fa fa-plus-circle"></i> Add a new recipe</a>
</p>
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by name: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Category
            </th>
            <th>
                Description
            </th>
            <th>
                Prep Time
            </th>
            <th>
                Cook Time
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.recipeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.foodCategory)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.recipeDesc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.prepTime) min
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cookTime) min
        </td>
        <td>
            <div class="btn-group">
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.RecipeID"><i class="fa fa-pencil"></i></a>
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.RecipeID"><i class="fa fa-info-circle"></i></a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.RecipeID"><i class="fa fa-trash"></i></a>
            </div> 
        </td>
    </tr>
}
    </tbody>
</table>

@{
    var prevDisabled = !Model.hasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.hasNextPage ? "disabled" : "";
}

<a asp-action="Index" asp-route-pageNumber="@(Model.pageIndex - 1)" class="btn btn-default @prevDisabled">Previous</a>

<a asp-action="Index" asp-route-pageNumber="@(Model.pageIndex + 1)" class="btn btn-default @nextDisabled">Next</a>