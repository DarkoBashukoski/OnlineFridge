@model OnlineFridge.Models.ViewModels.FullRecipeBook

@{
    ViewData["Title"] = "Details";
}

<h1>@Html.DisplayFor(model => model.recipe.recipeName)</h1>

<div>
    <h4>Recipe</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.recipe.foodCategory)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.recipe.foodCategory)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.recipe.recipeDesc)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.recipe.recipeDesc)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.recipe.prepTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.recipe.prepTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.recipe.cookTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.recipe.cookTime)
        </dd>
    </dl>
</div>
<hr />
<div>
    @foreach (var quantity in Model.quantities) {
        <p>@quantity.quantity @quantity.measurement.measurementName @quantity.ingredient.ingredientName</p>
    } 
</div>
<hr />
<div>
    @foreach (var step in Model.steps) {
        <p>@step.stepNumber. @step.stepDescription</p>
    } 
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.recipe.RecipeID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
