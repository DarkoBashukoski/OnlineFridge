@model OnlineFridge.Models.Recipe

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Recipe</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RecipeID" />
            <div class="form-group">
                <label class="control-label">Food Category</label>
                <select asp-for="foodCategory" class="form-control" asp-items="Html.GetEnumSelectList<FoodCategory>()"></select>
                <span asp-validation-for="foodCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Recipe Name</label>
                <input asp-for="recipeName" class="form-control" />
                <span asp-validation-for="recipeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Recipe Description</label>
                <input asp-for="recipeDesc" class="form-control" />
                <span asp-validation-for="recipeDesc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Prep Time</label>
                <input asp-for="prepTime" class="form-control" />
                <span asp-validation-for="prepTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Cook Time</label>
                <input asp-for="cookTime" class="form-control" />
                <span asp-validation-for="cookTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>